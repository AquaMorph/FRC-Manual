<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="actionBarTheme">@color/primary_dark</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <!--<item name="actionBarTabTextStyle">@style/Dropdown</item>-->
        <item name="actionDropDownStyle">@style/Dropdown</item>
        <!--<item name="actionBarWidgetTheme">@style/widget</item>-->
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Dropdown" parent="Base.Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:textAppearance">@style/Dropdown.text</item>
        <item name="android:popupBackground">@color/primary_dark</item>
    </style>
    <style name="Dropdown.text" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#0000FF</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
    </style>


</resources>
